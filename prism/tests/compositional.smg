smg

module M1

	s : [0..1];

	[a?] s=0 -> (s'=1);

	[b!] s=1 -> 0.6 : (s'=0) + 0.4 : (s'=1);
	[b!] s=1 -> 0.3 : (s'=0) + 0.7 : (s'=1);

endmodule

module M3
	[b!] s=1 -> true;
endmodule

module M2

	t : [0..2];

	[a?] t=0 -> (t'=1);
	[b?] t=0 -> (t'=1);

	[b?] t=1 -> (t'=1);
	[tau?] t=1 -> (t'=2);

	[c!] t=2 -> 0.5 : (t'=0) + 0.5 : (t'=1);
	[c!] t=2 -> 0.4 : (t'=0) + 0.6 : (t'=1);

endmodule

system "S1"
	M1 || M3
endsystem

system "S2"
	M2
endsystem

system
	"S1" || "S2"
endsystem

// property: R{a/b}>=lambda [S]
const double lambda = 0.55;
rewards "ab"
	[a] true : 10;
	[b] true : -10*lambda;
endrewards

// property: R{c/a}>=gamma [S]
const double gamma = 2.1;
rewards "ca"
	[c] true : 10;
	[a] true : -10*gamma;
endrewards
