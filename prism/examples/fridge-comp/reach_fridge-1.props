// objective parameters
const double va0 = 3.8; // accept offers of trader 0
const double vq0 = 3.3; // quality of offers of trader 0
const double vn = 8.0; // quantity of milk obtained by fridge
const double vm0 = 0.19; // money obtained by trader 0
const double vo0 = 6.0; // trader 0 offers count

// compositional property: index 1
comp(
	and(60, 300, 
		or(R{"offers0"}<vo0 [ C ], R{"accept0"}>=va0 [ C ]),
		or(R{"quality0"}<vq0 [ C ], R{"quantity"}>=vn [ C ])),
	and(400, 20,
		or(R{"accept0"}<va0 [ C ], R{"quality0"}>=vq0 [ C ]),
		or(R{"accept0"}<va0 [ C ], R{"money0"}>=vm0 [ C ])
	)
)

// monolithic property: index 2
and(100, 300,
	or(R{"offers0"}>=vo0 [ C ], R{"money0"}>=vm0 [ C ]),
	or(R{"offers0"}>=vo0 [ C ], R{"quantity"}>=vn [ C ])
)
